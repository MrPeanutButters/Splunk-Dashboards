{
  "description": "Vulnerability Remediation \u2014 Nessus (Studio)",
  "title": "Vulnerability Remediation \u2014 Nessus (Studio)",
  "visualizations": {
    "viz1": {
      "type": "viz.column",
      "title": "Open Vulnerabilities by Severity",
      "dataSources": [
        "ds1"
      ]
    },
    "viz2": {
      "type": "viz.column",
      "title": "Top CVEs",
      "dataSources": [
        "ds2"
      ]
    },
    "viz3": {
      "type": "viz.table",
      "title": "Hosts with Most Open Vulns",
      "dataSources": [
        "ds3"
      ]
    }
  },
  "dataSources": {
    "ds1": {
      "type": "ds.search",
      "options": {
        "query": "`index_nessus` `sourcetype_nessus_vuln` | eval sev=coalesce(severity, severity_code) | stats count by sev | sort sev",
        "queryParameters": {
          "earliest": "-7d@d",
          "latest": "now"
        }
      }
    },
    "ds2": {
      "type": "ds.search",
      "options": {
        "query": "`index_nessus` `sourcetype_nessus_vuln` | stats count by cve | sort - count | head 15",
        "queryParameters": {
          "earliest": "-7d@d",
          "latest": "now"
        }
      }
    },
    "ds3": {
      "type": "ds.search",
      "options": {
        "query": "`index_nessus` `sourcetype_nessus_vuln` | stats count by host | sort - count | head 20",
        "queryParameters": {
          "earliest": "-7d@d",
          "latest": "now"
        }
      }
    }
  },
  "defaults": {
    "visualizations:viz.line": {
      "options": {
        "legendDisplay": "right"
      }
    },
    "visualizations:viz.column": {
      "options": {
        "legendDisplay": "right"
      }
    },
    "visualizations:viz.table": {
      "options": {
        "wrap": true
      }
    }
  },
  "layout": {
    "type": "grid",
    "options": {
      "width": 1440,
      "height": 960,
      "display": "auto"
    },
    "structure": [
      {
        "item": "viz1",
        "type": "block",
        "position": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        }
      },
      {
        "item": "viz2",
        "type": "block",
        "position": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        }
      },
      {
        "item": "viz3",
        "type": "block",
        "position": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 4
        }
      }
    ]
  },
  "descriptionPlainText": "Vulnerability Remediation \u2014 Nessus (Studio)",
  "version": "1.0"
}